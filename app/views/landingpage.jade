    section.header.jumbotron(ng-controller='LandingpageCtrl')
      p.text-center.logo
        img(src='/landingpage/img/bitbetwin_logo_white.png')
      .container
        .row
          .col-md-5
            h1 Welcome!
            p.lead Fill out the form below and apply for the beta program.
            form.form-signin(role='form', ng-submit='subscribe()', name='subscribe_form', novalidate)
              .form-group(ng-class='{\'has-error\': subscribe_form.name.$dirty && subscribe_form.name.$invalid}')
                input.form-control.input-lg(ng-model='name', type='text', name='name', placeholder='Name', required)
                span.help-block(ng-show='subscribe_form.name.$dirty && subscribe_form.name.$error.required') Please enter your name
              .form-group(ng-class='{\'has-error\': subscribe_form.email.$dirty && subscribe_form.email.$invalid}')
                input.form-control.input-lg(ng-model='email', type='email', name='email', placeholder='Email', required)
                span.help-block.has-error(ng-show='subscribe_form.email.$dirty && subscribe_form.email.$error.required') Please enter your email
                span.help-block(ng-show='subscribe_form.email.$dirty && subscribe_form.email.$error.email') Please enter a valid email
              button.btn.btn-primary.btn-lg.btn-block(type='submit', ng-disabled="subscribe_form.$invalid") Sign Up!
          .col-md-7
            img.img-rounded(src='holder.js/100%x300/grey')
        .row(ng-show='response.msg')
          .col-md-12
            .alert.alert-success(ng-if='!response.err') {{ response.msg }}
            .alert.alert-danger(ng-if='response.err') {{ response.msg }}
